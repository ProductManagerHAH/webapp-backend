{
	"compilerOptions": {
		"lib": ["es2018", "dom"],
		"target": "es2018",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./build",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true
	},
	"include": [
		"src/**/*.ts",
		"index.mjs",
		"config/*.config.js" // for *.config.js files
	],
	"exclude": ["node_modules"]
}
